<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="plugin.video.tvaac"
       name="tvaac"
       version="0.1.00"
       provider-name="tvaac">
    <requires>
        <import addon="xbmc.python" version="2.1.0"/>
	<import addon="script.module.t0mm0.common" version="1.0.0"/>
    </requires>
    <extension point="xbmc.python.pluginsource" library="addon.py">
        <provides>video</provides>
    </extension>
    <extension point="xbmc.addon.metadata">
        <summary>Stream em directo e videos da tvAAC</summary>
        <description>Addon da Televisao da Associacao Academica de Coimbra. Visita o site oficial - http://tv.aac.uc.pt/</description>
        <platform>all</platform>
    </extension>
</addon>
